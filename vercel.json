{
  "version": 2,
  "builds": [
    {
      "src": "Backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "Frontend/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/config",
      "destination": "/Backend/server.js"
    },
    {
      "source": "/configs/:droneId",
      "destination": "/Backend/server.js"
    },
    {
      "source": "/logs",
      "destination": "/Backend/server.js"
    },
    {
      "source": "/logs/:droneId",
      "destination": "/Backend/server.js"
    },
    {
      "source": "/status/:droneId",
      "destination": "/Backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/Frontend/$1"
    }
  ]
}